{
  "manifest_version": 3,
  "name": "Audio Recorder",
  "version": "1.0",
  "description": "Toggle to record tab audio.",
  "permissions": [
    "tabCapture",
    "downloads",
    "notifications",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}